
.content-card {
		padding: 16rpx 16rpx 0 16rpx;
		background: #fff;
		position: relative;
		-webkit-box-orient: vertical;
		-webkit-box-direction: normal;
		-webkit-flex-direction: column;
		    -ms-flex-direction: column;
		        flex-direction: column;
		-webkit-box-shadow: rgba(0, 0, 0, 0.1) 5px 5px 6px;
		        box-shadow: rgba(0, 0, 0, 0.1) 5px 5px 6px;
		border-buttom: 1rpx solid rgba(0, 0, 0, 0.15);
		overflow:hidden;
}
.content-card-header{
		font-size: 32rpx;
		overflow : hidden;
		-o-text-overflow: ellipsis;
		   text-overflow: ellipsis;
		display: -webkit-box;
		-webkit-line-clamp: 2;
		-webkit-box-orient: vertical;
}
.content-card-body{
		font-size: 24rpx;
		overflow : hidden;
		-o-text-overflow: ellipsis;
		   text-overflow: ellipsis;
		display: -webkit-box;
		-webkit-line-clamp: 4;
		-webkit-box-orient: vertical;
		color: #555555;
}
.content-card-footer{
		-webkit-box-pack: justify;
		-webkit-justify-content: space-between;
		    -ms-flex-pack: justify;
		        justify-content: space-between;
		overflow: hidden;
		color: #999;
		font-size: 24rpx;
		padding-bottom: 5rpx;
}
.up{
		height:50rpx;
		line-height:50rpx;
}
.up image{
		display:block;
		float:left;
		width:50rpx;
		height:50rpx;
		border-radius:50rpx;
		margin-right:15rpx;
}
.up .timeTip{
		float:right;
		margin-right:5rpx;
}
.down{
		list-style: none;
		overflow:hidden;
		line-height:50rpx;
		background-color: #FFFFFF;
		color:#3F536E;
        border-top:1rpx solid rgba(0, 0, 0, 0.15);
		margin-top:10rpx;
}
.down ._li{
		display:block;
		float:left;
		font-size:10rpx;
}
.down ._li:nth-child(1){
		padding-right:35rpx;
}
.down ._li:nth-child(3){
		float:right;
		padding-right:5rpx;
}
